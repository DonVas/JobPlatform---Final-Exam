@using JobPlatform.Common
@using JobPlatform.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    var url = this.UserManager.GetUserAsync(this.User).Result;
}
<style>
    .avatar {
        vertical-align: middle;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        border-left-width: 1px;
        border-bottom-width: 1px;
        border-right-width: 1px;
        border-top-width: 1px;
        padding-left: 0px;
        padding-bottom: 0px;
        padding-right: 0px;
        padding-top: 0px;
    }
</style>

<ul class="navbar-nav">
    @if (this.SignInManager.IsSignedIn(this.User))
    {
        <li class="nav-item align-baseline">
            <a class="nav-link text-dark align-baseline" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                @if (url.ProfilePicture != null)
                {
                    <img src="@url.ProfilePicture" class="avatar" />
                }
                else
                {
                    <span style="font-size: 15px; color: gray;">
                        <i class="fas fa-portrait"></i>
                    </span>
                }

                @(this.User.Identity.Name)
            </a>
        </li>
        if (this.User.IsInRole(GlobalConstants.Administrator))
        {
            <li class="nav-item align-baseline">
                <a class="nav-link text-dark" asp-area="Administration" asp-controller="Dashboard" asp-action="Index" title="Admin">Admin</a>
            </li>
        }
        <li class="nav-item align-baseline">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@(this.Url.Action("Index", "Home", new { area = string.Empty }))">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item align-baseline">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item align-baseline">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>

@section Scripts
{

}