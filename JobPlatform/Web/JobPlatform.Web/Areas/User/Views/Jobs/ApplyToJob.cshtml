@model JobPlatform.Web.ViewModels.Candidates.CandidateApplyInputModel
@{
    this.ViewData["Title"] = "Apply To Job";
}
    <h4>this.ViewData["Title"]</h4>
<hr />
<div class="container">
    <div class="col-md-12">
        <form asp-action="ApplyToJob">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-10">
                <label asp-for="Cv" class="control-label"></label>
                <textarea asp-for="Cv" class="form-control"></textarea>
                <span asp-validation-for="Cv" class="text-danger"></span>
            </div>
            <div class="col-10">
                <label asp-for="MotivationLetter" class="control-label"></label>
                <textarea asp-for="MotivationLetter" class="form-control"></textarea>
                <span asp-validation-for="MotivationLetter" class="text-danger"></span>
            </div>
            <div class="col-4">
                <label asp-for="UserEmail" class="control-label"></label>
                <input asp-for="UserEmail" class="form-control" />
                <span asp-validation-for="UserEmail" class="text-danger"></span>
            </div>
            <div class="col-4">
                <label asp-for="UserAddress.Country" class="control-label"></label>
                <input asp-for="UserAddress.Country" class="form-control" />
                <span asp-validation-for="UserAddress.Country" class="text-danger"></span>
            </div>
            <div class="col-4">
                <label asp-for="UserAddress.Region" class="control-label"></label>
                <input asp-for="UserAddress.Region" class="form-control" />
                <span asp-validation-for="UserAddress.Region" class="text-danger"></span>
            </div>
            <div class="col-4">
                <label asp-for="UserAddress.City" class="control-label"></label>
                <input asp-for="UserAddress.City" class="form-control" />
                <span asp-validation-for="UserAddress.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="JobId" />
                <input type="submit" value="Apply Now" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a class="btn btn-info" asp-action="Index">Back to List</a>
</div>

