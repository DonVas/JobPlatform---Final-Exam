@model JobPlatform.Web.ViewModels.Administration.Dashboard.Users.SelectedUserViewModel
@{
    this.ViewData["Title"] = "User Panell";
}
<div id="user" class="container">
    <div class="row">
        <div class="col text-center mt-3">
            @if (Model.ProfilePicture != null)
            {
                <img class="preview-img" src="@Model.ProfilePicture" alt="Preview Image" width="200" height="200" />
            }
            else
            {
                <img class="preview-img" src="http://simpleicon.com/wp-content/uploads/account.png" alt="Preview Image" width="200" height="200" />
            }

            <h2 class="mt-3">@Model.UserName</h2>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="true">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Contact</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="address-tab" data-toggle="tab" href="#address" role="tab" aria-controls="address" aria-selected="false">Address</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="links-tab" data-toggle="tab" href="#links" role="tab" aria-controls="links" aria-selected="false">Links</a>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <table class="table table-hover table-sm table-properties">
                        <tr v-show="UserId">
                            <th>UserId</th>
                            <td>@Model.Id</td>
                        </tr>
                        <tr v-show="User Name">
                            <th>UserName</th>
                            <td>@Model.UserName</td>
                        </tr>
                        <tr v-show="First Name">
                            <th>First name</th>
                            <td>@Model.FirstName</td>
                        </tr>
                        <tr v-show="Middle Name">
                            <th>Middle Name</th>
                            <td>@Model.MiddleName</td>
                        </tr>
                        <tr v-show="Family Name">
                            <th>Family Name</th>
                            <td>@Model.FamilyName</td>
                        </tr>
                        <tr v-show="Birthdate">
                            <th>Birthdate</th>
                            <td>@Model.Birthdate</td>
                        </tr>
                        <tr v-show="Gender">
                            <th>Gender</th>
                            <td>@Model.Gender</td>
                        </tr>
                    </table>
                </div>

                <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                    <table class="table table-hover table-sm table-properties">
                        <tr v-show="Email">
                            <th>Email</th>
                            <td>@Model.Email</td>
                        </tr>
                        <tr v-show="Email_verified">
                            <th>Email Verified</th>
                            <td>@Model.EmailConfirmed</td>
                        </tr>
                        <tr v-show="Phone_number">
                            <th>Phone number</th>
                            <td>@Model.PhoneNumber</td>
                        </tr>
                        <tr v-show="Phone_number_verified">
                            <th>Phone number verified</th>
                            <td>@Model.PhoneNumberConfirmed</td>
                        </tr>
                    </table>
                </div>

                <div class="tab-pane fade" id="address" role="tabpanel" aria-labelledby="address-tab">
                    <table class="table table-hover table-sm table-properties">
                        <tr v-show="user.address.country">
                            <th>country</th>
                            <td>{{user.address.country}}</td>
                        </tr>
                        <tr v-show="user.address.postal_code">
                            <th>postal code</th>
                            <td>{{user.address.postal_code}}</td>
                        </tr>
                        <tr v-show="user.address.locality">
                            <th>locality</th>
                            <td>{{user.address.locality}}</td>
                        </tr>
                        <tr v-show="user.address.region">
                            <th>region</th>
                            <td>{{user.address.region}}</td>
                        </tr>
                        <tr v-show="user.address.street_address">
                            <th>street address</th>
                            <td>{{user.address.street_address}}</td>
                        </tr>
                        <tr v-show="user.address.formatted">
                            <th>formatted</th>
                            <td>{{user.address.formatted}}</td>
                        </tr>
                    </table>
                </div>
                <div class="tab-pane fade" id="links" role="tabpanel" aria-labelledby="links-tab">
                    <table class="table table-hover table-sm table-properties">
                        <tr v-show="Id">
                            <th>id</th>
                            <td><a v-bind:href="user['id']">{{user["id"]}}</a></td>
                        </tr>
                        <tr v-show="user.me">
                            <th>me</th>
                            <td><a v-bind:href="user.me">{{user.me}}</a></td>
                        </tr>
                        <tr v-show="user.website">
                            <th>website</th>
                            <td><a v-bind:href="user.website">{{user.website}}</a></td>
                        </tr>
                        <tr v-show="user.profile">
                            <th>profile</th>
                            <td><a v-bind:href="user.profile">{{user.profile}}</a></td>
                        </tr>
                        <tr v-show="user.webmail">
                            <th>webmail</th>
                            <td><a v-bind:href="user.webmail">{{user.webmail}}</a></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Users">Back to List</a>
</div>

