@model JobPlatform.Web.ViewModels.Administration.Dashboard.Users.SelectedUserViewModel
@{
    this.ViewData["Title"] = "User Panell";
}

<h4>@Model.UserName</h4>
<hr />
<div class="row">
    <div class="col-md-auto">
        <form asp-action="User">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-auto mb-3">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-auto mb-3">
                    <label asp-for="MiddleName" class="control-label"></label>
                    <input asp-for="MiddleName" class="form-control" />
                    <span asp-validation-for="MiddleName" class="text-danger"></span>
                </div>
                <div class="col-md-auto mb-3">
                    <label asp-for="FamilyName" class="control-label"></label>
                    <input asp-for="FamilyName" class="form-control" />
                    <span asp-validation-for="FamilyName" class="text-danger"></span>
                </div>             
            </div>
            <div class="row">
                <div class="col-md-auto mb-3">
                    <label asp-for="DeletedOn" class="control-label"></label>
                    <input asp-for="DeletedOn" class="form-control" />
                    <span asp-validation-for="DeletedOn" class="text-danger"></span>
                </div>
                <div class="col-md-auto mb-3">
                    <label asp-for="CreatedOn" class="control-label"></label>
                    <input asp-for="CreatedOn" class="form-control" />
                    <span asp-validation-for="CreatedOn" class="text-danger"></span>
                </div>
                <div class="col-md-auto mb-3">
                    <label asp-for="ModifiedOn" class="control-label"></label>
                    <input asp-for="ModifiedOn" class="form-control" />
                    <span asp-validation-for="ModifiedOn" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6 mb-3 form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                </label>
            </div>           
            

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Users">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
